@model IEnumerable<Bussiness.Models.UserModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Cashiers</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "CreateCashier")
    </p>
    <table class="table">
        <tr>
            
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "EditCashier", new { id=item.Id }) |
                @Html.ActionLink("Delete", "DeleteCashier", new { id=item.Id })
            </td>
        </tr>
    }
    
    </table>
    @Html.ActionLink("Back to menu", "Index")
</body>
</html>
